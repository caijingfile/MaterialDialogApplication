<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingLeft="@dimen/content_title_paddingLeft">

    <com.common.design.SmoothCheckBox
        android:id="@+id/multi_choice_item_checkBox"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:color_checked="@color/colorPrimary"
        app:draw_circle="false"
        app:enable="false"/>

    <TextView
        android:id="@+id/multi_choice_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:text="数学"
        android:textSize="17sp"/>
</LinearLayout>